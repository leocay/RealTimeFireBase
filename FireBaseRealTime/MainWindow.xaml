            ItemContainerStyle="{DynamicResource CustomListViewStyleItem}"
            ItemsSource="{Binding ListAccountInforModels, Mode=TwoWay}"
            PreviewMouseLeftButtonDown="ListView_PreviewMouseLeftButtonDown"
            PreviewMouseMove="ListView_PreviewMouseMove"
            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
            SelectedItem="{Binding SelectedAccount, Mode=TwoWay}"
            SizeChanged="ListAcc_SizeChanged"
            Style="{DynamicResource CustomListViewStyle}"
            VirtualizingStackPanel.IsVirtualizing="True"
            VirtualizingStackPanel.VirtualizationMode="Recycling">

